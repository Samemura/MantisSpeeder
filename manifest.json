{
  "manifest_version": 2,

  "name": "Mantis speeder",
  "description": "Using Mantis tracker with speed",
  "version": "1.0",

  "permissions": [
     "http://*/mantis/view.php*", "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "mantis.png",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/mantis/*"],
      "js": ["MantisContent.js"]
    }]
}
